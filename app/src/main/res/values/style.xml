<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="collapsedTitleStyle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/green_base</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="expandedTitleStyle" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@color/transparent</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.SplashScreen.Api" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/green_base</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Foodipedia</item>
    </style>

</resources>